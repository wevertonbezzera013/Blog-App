<h5>Categoria</h5>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success mt-2">Leia mais</button></a>
        <hr>
        <small>Data de publicação: {{data}}</small>
        <hr>
    </div>
</div>
{{else}}
    <h5>Nenhuma Postagem</h5>
{{/each}}