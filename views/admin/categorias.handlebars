<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success mt-2">Nova Categoria</button></a><br>
<br>
{{#each categorias}}

    <div class="card">
        <div class="card-body">
            <h4>Nome: {{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-2"> Editar Categoria</button></a>
            <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>

{{else}}

{{/each}}